generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Service {
  HAIRCUTS_AND_STYLING
  MANICURE_AND_PEDICURE
  FACIAL_TREATMENTS
}

enum Role {
  ADMIN
  USER
}

model Reservation {
  id           String   @id @default(cuid())
  userId       String
  name         String
  phone        String
  service      Service
  startSession DateTime
  endSession   DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Review {
  id      String  @id @default(cuid())
  name    String?
  rating  Int
  comment String?
}

model User {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique
  phone       String
  password    String
  role        Role
  Reservation Reservation[]
}
